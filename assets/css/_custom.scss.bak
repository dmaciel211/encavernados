/* ===== Encavernados — estilos propios ===== */

/* Grilla responsive para Libros */
.libros-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.2rem;
  align-items: stretch;
  margin: 1.5rem 0;
}

/* Tarjeta de libro */
.libro-card {
  --card-bg: #fff;
  --card-border: rgba(0, 0, 0, .10);
  --card-shadow: 0 4px 12px rgba(0, 0, 0, .08);
  --card-shadow-hover: 0 10px 24px rgba(0, 0, 0, .12);

  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: 12px;
  padding: 1.2rem;
  box-shadow: var(--card-shadow);
  transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
  display: flex;
  flex-direction: column;
  text-align: center;

  &:hover {
    transform: translateY(-3px);
    box-shadow: var(--card-shadow-hover);
    border-color: rgba(0, 0, 0, .16);
  }
}

/* Imagen de portada: recorte limpio y pequeño zoom al hover */
.libro-portada {
  width: 100%;
  height: 320px;       /* ajustá a gusto */
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: .9rem;
  transform: translateZ(0); /* evita blureo en algunos navegadores */
  transition: transform .25s ease;

  .libro-card:hover & {
    transform: scale(1.02);
  }
}

/* Tipografía y detalles */
.libro-titulo {
  font-size: clamp(1.05rem, 2.3vw, 1.28rem);
  line-height: 1.25;
  margin: .35rem 0 .25rem;
  font-weight: 700;
}

.libro-detalle {
  margin: .2rem 0;
  font-size: .95rem;
  color: #444;
}

.libro-resumen {
  margin: .8rem 0 1rem;
  line-height: 1.55;
}

/* Botón/enlace de acción */
.libro-link {
  align-self: center;
  display: inline-block;
  padding: .55rem 1rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  background: #222;
  color: #fff;

  &:hover { background: #444; }
}

/* Modo oscuro (si el usuario lo prefiere) */
@media (prefers-color-scheme: dark) {
  .libro-card {
    --card-bg: #111417;
    --card-border: rgba(255, 255, 255, .10);
    --card-shadow: 0 4px 12px rgba(0, 0, 0, .5);
    --card-shadow-hover: 0 10px 24px rgba(0, 0, 0, .6);
    color: #e8e8e8;
  }
  .libro-detalle { color: #cfcfcf; }
  .libro-link { background: #e8e8e8; color: #111; }
  .libro-link:hover { background: #cfcfcf; }
}

/* Ajustes de responsive finos */
@media (max-width: 480px) {
  .libro-portada { height: 240px; }
}

/* Imagen Portada - Full Width */

.main-image {
  width: 100vw;                        /* ancho total del viewport */
  margin-left: calc(-50vw + 50%);      /* truco: rompe el max-width del contenedor */
  margin-right: calc(-50vw + 50%);
}

.main-image img {
  display: block;
  width: 100%;                         /* ocupa todo el ancho disponible */
  height: auto;                        /* mantiene proporción */
  border-radius: 0;                     /* sin bordes redondeados, podés cambiarlo */
}


/*Imágenes team*/

.team-grid {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.team-card {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 1.5rem;
  border: 1px solid #e7e7e7;
  border-radius: 14px;
  padding: 20px;
  background: #fff;
  box-shadow: 0 1px 2px rgba(0,0,0,.05);
}

.team-card img {
  width: 160px;
  height: 160px;
  object-fit: cover;
  border-radius: 50%;
  flex-shrink: 0;
}

.team-text {
  flex: 1;
  text-align: left;
}

.team-text h2 {
  margin: 0 0 0.25rem;
  font-size: 1.3rem;
}

.team-text .role {
  color: #777;
  margin: 0 0 0.75rem;
  font-size: .95rem;
  font-style: italic;
}

/* Responsive: en mobile, foto arriba */
@media (max-width: 768px) {
  .team-card {
    flex-direction: column;
    text-align: center;
    align-items: center;
  }
  .team-text {
    text-align: center;
  }
}
/* Grid de tarjetas en listados/home */
.post-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.25rem;
}

.list, .posts, .post-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.25rem;
}


/* ====== Artículos: buscador + grilla + cards ====== */

/* Buscador */
.articulos-search {
  margin: 0 0 1rem;
}
.articulos-search input[type="search"] {
  width: 100%;
  max-width: 520px;
  padding: .6rem .8rem;
  border: 1px solid #ddd;
  border-radius: 10px;
  font-size: 1rem;
  outline: none;
}
.articulos-search input[type="search"]:focus {
  border-color: #aaa;
}

/* Grilla (para el contenedor de /articulos y también listas del theme) */
#articulos-grid,
.post-grid,
.list,
.posts,
.post-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.25rem;
}

/* Card */
.post-card {
  display: grid;
  grid-template-rows: auto 1fr;
  gap: 0.75rem;
  border-radius: 12px;
  overflow: hidden;
  background: var(--card-bg, #fff);
  box-shadow: 0 2px 10px rgba(0,0,0,.06);
}

/* Imagen */
.post-card__thumb img {
  display: block;
  width: 100%;
  height: auto;
  aspect-ratio: 16 / 9;      /* recorte prolijo */
  object-fit: cover;
  transform: translateZ(0);  /* evita blur en algunos navegadores */
}

/* Cuerpo */
.post-card__body {
  padding: .9rem 1rem 1.1rem;
}
.post-card__title {
  margin: 0 0 .35rem;
  font-size: 1.15rem;
  line-height: 1.25;
}
.post-card__title a {
  text-decoration: none;
}
.post-card__excerpt {
  margin: 0 0 .7rem;
  color: #555;
  line-height: 1.55;
}
.post-card__meta {
  font-size: .9rem;
  color: #777;
  margin-bottom: .6rem;
}
.post-card__readmore {
  display: inline-block;
  font-weight: 600;
  text-decoration: none;
  border-bottom: 2px solid currentColor;
}

/* Loader / estados */
.loader,
.empty {
  text-align: center;
  padding: 1rem;
  color: #777;
}
.sentinel {
  height: 1px; /* ancla para el IntersectionObserver */
}

/* Hover sutil en desktop */
@media (hover: hover) and (pointer: fine) {
  .post-card { transition: transform .18s ease, box-shadow .18s ease; }
  .post-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 24px rgba(0,0,0,.12);
  }
}

/* Ajustes responsive finos */
@media (max-width: 480px) {
  .post-card__title { font-size: 1.05rem; }
  .post-card__excerpt { font-size: .98rem; }
}

/* Modo oscuro (si el usuario lo prefiere) */
@media (prefers-color-scheme: dark) {
  .post-card {
    --card-bg: #111417;
    color: #e8e8e8;
    box-shadow: 0 4px 12px rgba(0,0,0,.5);
  }
  .post-card__excerpt { color: #cfcfcf; }
  .post-card__meta { color: #bdbdbd; }
  .articulos-search input[type="search"] {
    background: #0e1114;
    color: #e8e8e8;
    border-color: #333;
  }
}

/* Altura segura bajo el header fijo */
:root { --safe-top: 72px; } /* ajustá 56/64/72 según tu header */

.post-list,
main .list,
main .posts,
main .post-list {
  padding-top: var(--safe-top);
}

/* Si usás anclas/scroll a títulos, que no queden tapados */
h1, h2, h3, [id] { scroll-margin-top: var(--safe-top); }


/* Forzar grilla en la página de Artículos */
#articulos-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  align-items: start;
}

/* Asegurar que las cards no se estiren raro */
#articulos-grid .post-card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.post-list #articulos-grid.post-grid {
  display: grid !important;
}

#articulos-grid .post-card { border: 1px dashed tomato; }

/* 1) Reset: que la sección NO sea grid */
.list, .posts, .post-list,
section.post-list {
  display: block !important;
}

/* 2) Grilla SOLO para el contenedor de tarjetas en /articulos */
#articulos-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  align-items: start;
}

/* 3) Asegurá que cada tarjeta se comporte bien dentro de la grilla */
#articulos-grid .post-card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* HOME: imagen recortada a la izquierda + texto a la derecha */
.home .post-summary {
  display: grid !important;
  grid-template-columns: 180px 1fr !important; /* probá 200px si querés la miniatura más grande */
  gap: 1rem !important;
  align-items: start !important;
}

/* Miniatura recortada y pareja */
.home .post-summary .post-cover {
  width: 100% !important;
  height: 120px !important;       /* subí a 140/160 si te gusta más alta */
  object-fit: cover !important;
  border-radius: 10px !important;
  display: block !important;
}

/* Cuerpo compacto en home */
.home .post-summary .post-text {
  padding: 0 !important;
}
.home .post-summary .post-text h2 {
  margin: 0 0 .4rem !important;
  font-size: 1.05rem !important;
  line-height: 1.3 !important;
}
.home .post-summary .post-description {
  margin: 0 0 .6rem !important;
  font-size: .95rem !important;
  color: #555 !important;
}
.home .post-summary .post-author {
  font-size: .86rem !important;
  color: #777 !important;
}

/* En mobile, volvemos a vertical */
@media (max-width: 600px) {
  .home .post-summary {
    grid-template-columns: 1fr !important;
  }
  .home .post-summary .post-cover {
    height: 180px !important;
  }
}

.home .posts,
.home .list {
  margin-top: 2rem !important; /* separa los summaries del banner */
}

h1, h2, [id] {
  scroll-margin-top: 80px; /* ajustá al alto de tu header */
}

/* Animación al pasar el mouse en home */
.home .post-summary {
  transition: transform .2s ease, box-shadow .2s ease;
  border-radius: 10px;
  padding: .6rem;
}

.home .post-summary:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 18px rgba(0,0,0,.12);
  background: #fff;
}

/* La imagen hace un zoom sutil */
.home .post-summary .post-cover {
  transition: transform .25s ease;
}

.home .post-summary:hover .post-cover {
  transform: scale(1.04);
}

.home .post-summary h2 a {
  text-decoration: none;
  color: inherit;
  transition: color .2s ease;
}

.home .post-summary:hover h2 a {
  color: #e63946; /* un rojo lindo, cambiá al color de tu branding */
}

.home .post-summary .read-more {
  display: inline-block;
  margin-top: .5rem;
  font-weight: 600;
  transition: transform .2s ease, color .2s ease;
}

.home .post-summary:hover .read-more {
  transform: translateX(3px);
  color: #e63946;
}

